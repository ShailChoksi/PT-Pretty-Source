{
  "manifest_version": 2,

  "name": "PT Pretty Source",
  "description": "A button to display the Pebble time source for your PT/PTS kickstarter order",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "IsItTime.html",
    "defaut_title": "Is it Time?"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://ajax.googleapis.com/",
    "https://kickstarter.getpebble.com/pledges/*"
  ]
}
